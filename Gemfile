  gem 'sass-rails', '~> 3.2'
  gem 'coffee-rails', '~> 3.2'
  gem 'compass-rails'
  gem 'uglifier'
  gem 'bootstrap-sass', '~> 2.0.3.0'
  gem 'handlebars_assets'
  gem 'hamlbars', '~> 2.0'
end

group :development do
  gem 'quiet_assets'
end


